<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/outgoing_tv_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/outgoing_tv_message_text"
        app:layout_constraintEnd_toStartOf="@+id/outgoing_tv_message_text"
        app:layout_constraintTop_toTopOf="@+id/outgoing_tv_message_text"
        app:layout_constraintVertical_bias="1.0"
        tools:text="20:12 am" />

    <TextView
        android:id="@+id/outgoing_tv_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/outgoing_chat_bubble"
        android:fontFamily="@font/convergence"
        android:maxWidth="250dp"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingEnd="16dp"
        android:paddingBottom="4dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hey mate, I am glad to hear that you were doing great lately and I hope one day we can meet" />
</androidx.constraintlayout.widget.ConstraintLayout>